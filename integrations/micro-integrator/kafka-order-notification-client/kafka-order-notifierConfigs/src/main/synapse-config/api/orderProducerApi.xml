<?xml version="1.0" encoding="UTF-8"?>
<api context="/produce" name="orderProducerApi" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST">
        <inSequence>
            <kafkaTransport.init>
                <name>orderProducer</name>
                <bootstrapServers>{get-property('env', 'KAFKA_URL')}</bootstrapServers>
                <keySerializerClass>org.apache.kafka.common.serialization.StringSerializer</keySerializerClass>
                <valueSerializerClass>org.apache.kafka.common.serialization.StringSerializer</valueSerializerClass>
                <acks>all</acks>
                <requestTimeout>10000</requestTimeout>
                <saslJaasConfig>{get-property('env', 'KAFKA_JAAS_CONFIG')}</saslJaasConfig>
                <securityProtocol>SASL_SSL</securityProtocol>
                <saslMechanism>PLAIN</saslMechanism>
                <timeout>8000</timeout>
                <metadataFetchTimeout>5000</metadataFetchTimeout>
                <maxPoolSize>50</maxPoolSize>
            </kafkaTransport.init>
            <kafkaTransport.publishMessages>
                <topic>orders</topic>
            </kafkaTransport.publishMessages>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
